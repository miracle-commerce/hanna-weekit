	  {
		"type": "select",
		"id": "direction",
		"options": [
		  {
			"value": "ticker-to-left",
			"label": "t:sections.ticker.settings.direction.options__1.label"
		  },
		  {
			"value": "ticker-to-right",
			"label": "t:sections.ticker.settings.direction.options__2.label"
		  }        
		],
